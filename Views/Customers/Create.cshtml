@model TrashCollector.ViewModels.CustomerWithAddress

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PickupDay" class="control-label">Garbage Pickup Day</label>
                <select asp-for="Customer.PickupDay" class="form-control" asp-items="@Html.GetEnumSelectList<DayOfWeek>()"></select>
                <span asp-validation-for="Customer.PickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.AddressLine1" class="control-label"></label>
                <input asp-for="Address.AddressLine1" class="form-control" />
                <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.AbbreviatedState" class="control-label"></label>
                <input asp-for="Address.AbbreviatedState" class="form-control" />
                <span asp-validation-for="Address.AbbreviatedState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Zipcode" class="control-label"></label>
                <input asp-for="Address.Zipcode" class="form-control" />
                <span asp-validation-for="Address.Zipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
